@model LibraryRental.ViewModel.BookAuthorViewModel

@{
    ViewBag.Title = "BookForm";
}

<h2>Book Form</h2>

@using (Html.BeginForm("Save", "Book"))
{
    <div class="form-group">
        @Html.LabelFor(v => v.Book.Title)
        @Html.TextBoxFor(v => v.Book.Title, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Book.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Book.Isbn)
        @Html.TextBoxFor(v => v.Book.Isbn, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Book.Isbn)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Book.NumberInStock)
        @Html.TextBoxFor(v => v.Book.NumberInStock, " ", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Book.NumberInStock)
    </div>

    <div class="form-group">
        <label>Authors</label>
        <input class="form-control" id="authors"/>
        @Html.ValidationMessageFor(v => v.Authors)
    </div>

